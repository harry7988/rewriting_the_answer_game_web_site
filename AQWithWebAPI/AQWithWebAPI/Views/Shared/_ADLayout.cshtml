<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 应用程序</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/vuejs")
    <style>
        .layout {
            border:1px soli #d7dde4;
            background: #f5f7f9;position: relative ;
            border-radius: 4px overflow hidden;
        }
        .layout-logo {
            width;100px;
            height: 30px; 
            background: #5b6270;
            border-radius: 3px ;
            float:left ;
            position: relative;
            top: 15px;
            left: 20px;
        }
        .layout-nav {
            width: 420px;
            margin :0 auto; margin-right: 20px;
        }
    </style>
</head>
<body>
    <body>
        <div id="app">
            <msh></msh>
            
        </div>

        <script>
            Vue.component('msh', {
                template: `<div class="layout">
        <Layout>
            <Header>
                <Menu mode="horizontal" theme="dark" active-name="1">
                    <div class="layout-logo"></div>
                    <div class="layout-nav">
                        <menu-item name="1">
                        </menu-item>
                        <menu-item name="2">
                        </menu-item>
                        <menu-item name="3">
                        </menu-item>
                        <menu-item name="4">
                        </menu-item>
                    </div>
                </Menu>
            </Header>
            <Layout>
                <Sider hide-trigger :style="{background: '#fff'}">
                    <Menu :active-name="['1']" theme="light" width="auto" :open-names="'1-1'">
                        <Submenu name="1">
                            <template slot="title">
                                <Icon type="ios-navigate"></Icon>
                                概览
                            </template>
                            <menu-item name="1-1" >系统概览</menu-item>
                            <menu-item name="1-2" >全服排名概览</menu-item>
                            <menu-item name="1-3">题库更新记录</menu-item>
                            <menu-item name="1-4">用户日志</menu-item>
                        </Submenu>
                        <Submenu name="2">
                            <template slot="title">
                                <Icon type="ios-keypad"></Icon>
                                题库管理
                            </template>
                            <menu-item name="2-1">题库搜素</menu-item>
                            <menu-item name="2-2">新增题目</menu-item>
                            <menu-item name="2-3">删除题目</menu-item>
                            <menu-item name="2-4">批量导入</menu-item>
                        </Submenu>
                        <Submenu name="3">
                            <template slot="title">
                                <Icon type="ios-analytics"></Icon>
                                用户管理
                            </template>
                            <menu-item name="3-1">用户信息修改</menu-item>
                            <menu-item name="3-2">添加用户</menu-item>
                            <menu-item name="3-3">用户查询</menu-item>
                        </Submenu>
                    </Menu>
                </Sider>
                <Layout :style="{padding: '0 24px 24px'}">
                    <Breadcrumb :style="{margin: '24px 0'}">
                        <BreadcrumbItem to="/">主页</BreadcrumbItem>
                        
                        
                    </Breadcrumb>
                    <Content :style="{padding: '24px', minHeight: '280px', background: '#fff'}">
                        @RenderBody()
                        <Button type="info">获取</Button>
                        <hr />
                        <Table :columns="columns1" :data="tmpdata"></Table>
                    </Content>
                </Layout>
            </Layout>
        </Layout>
    </div>`
            })

            var vm = new Vue({
                el: '#app'
            })
        </script>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")

        @RenderSection("scripts", required: false)
    </body>
</html>
